<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="batman.teste.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/numeroUm"
        android:textSize="90sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:layout_marginStart="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numeroDois"
        android:textSize="90sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:layout_marginLeft="184dp"
        android:layout_alignBaseline="@+id/numeroUm"
        android:layout_alignBottom="@+id/numeroUm"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginLeft="184dp"
        android:layout_alignBaseline="@+id/numeroDois"
        android:layout_alignBottom="@+id/numeroDois"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sure?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:id="@+id/botao"
        android:onClick="resposta" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputN"
        android:layout_marginTop="65dp"
        android:hint="Give it a try"
        android:layout_below="@+id/numeroUm"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center" />
</RelativeLayout>
