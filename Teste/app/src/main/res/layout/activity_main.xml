<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="batman.teste.MainActivity">

    <TextView
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginLeft="184dp"
        android:layout_alignBaseline="@+id/numeroDois"
        android:layout_alignBottom="@+id/numeroDois"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputN"
        android:layout_marginTop="27dp"
        android:hint="Give it a try"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/numeroUm"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numeroDois"
        android:textSize="90sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:layout_marginLeft="184dp"
        android:layout_above="@+id/inputN"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp" />

    <Button
        android:text="Sure?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/botao"
        android:onClick="resposta"
        android:layout_below="@+id/inputN"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp" />

    <TextView
        android:text="Nome:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nome"
        android:ems="10"
        android:id="@+id/edtNome"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/botao" />

    <Button
        android:text="enviar nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="registrar"
        android:layout_alignBaseline="@+id/botao"
        android:layout_alignBottom="@+id/botao"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/numeroUm"
        android:textSize="90sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/inputN" />
</RelativeLayout>
